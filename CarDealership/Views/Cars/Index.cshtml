@using CarDealership.Models;
<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Car Shop</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Car Shop Inventory</h1>
    </div>
    <ul>

    @if (Model.Count == 0)
    {
      <p>You have no cars in your inventory!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Cars car in Model)
      {
        <li>@car.makeModel, @car.color, @car.mileage, @car.price</li>;
      }
    }

    </ul>
    <a href='/cars/new' class="btn btn-dark">Add a New Car</a>
  </div>
</body>
</html>
